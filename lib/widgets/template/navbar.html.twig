{% block navbar %}
<!-- Top Navigation Bar -->
<nav class="fixed top-0 left-0 right-0 z-50 bg-white dark:bg-gray-800 border-b border-gray-200 dark:border-gray-700 shadow-sm">
    <div class="max-w-[1600px] mx-auto flex items-center justify-between px-4 h-16">
        <!-- Left: Logo & Menu Toggle -->
        <div class="flex items-center gap-4">
            <button id="menuToggle" class="lg:hidden px-2 py-1 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700">
                <i class="fas fa-bars text-xl"></i>
            </button>
            <a href="/" class="flex items-center gap-2">
                <img src="/logo.svg" alt="Finch Docs" class="h-10">
                <span class="font-bold text-xl hidden sm:block">Finch Documentation</span>
                <span class="text-gray-500 text-sm">v{{ finchVersion }}</span>
            </a>
        </div>

        <!-- Center: Search Bar -->
        <div class="flex-1 max-w-2xl mx-4 hidden md:block">
            <div class="relative">
                <input 
                    type="text" 
                    id="searchInput"
                    placeholder="Search documentation..." 
                    class="w-full px-4 py-2 pl-10 pr-4 rounded-lg border border-gray-300 dark:border-gray-600 bg-gray-50 dark:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-500 dark:focus:ring-blue-400"
                    autocomplete="off"
                >
                <i class="fas fa-search absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
                <kbd class="absolute right-3 top-1/2 transform -translate-y-1/2 px-2 py-1 text-xs bg-gray-200 dark:bg-gray-600 rounded">Ctrl+K</kbd>
                
                <!-- Search Results Dropdown -->
                <div id="searchResults" class="hidden absolute top-full left-0 right-0 mt-2 bg-white dark:bg-gray-800 rounded-lg shadow-xl border border-gray-200 dark:border-gray-700 max-h-96 overflow-y-auto z-50">
                    <!-- Results will be inserted here -->
                </div>
            </div>
        </div>

        <!-- Right: Actions -->
        <div class="flex items-center gap-2">
            <!-- Tools Dropdown -->
            <div class="relative group">
                <button id="toolsDropdown" class="hidden md:flex items-center gap-2 px-4 py-2 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors">
                    <span class="font-medium">Help</span>
                    <i class="fas fa-chevron-down text-xs"></i>
                </button>
                
                <!-- Dropdown Menu -->
                <div id="toolsMenu" class="hidden absolute right-0 mt-2 w-36 bg-white dark:bg-gray-800 rounded-lg shadow-xl border border-gray-200 dark:border-gray-700 py-2 z-50">
                    <a href="https://pub.dev/publishers/finchdart.com/packages" target="_blank" rel="noopener noreferrer" class="flex items-center gap-3 px-4 py-2.5 hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors">
                        <div class="font-medium text-sm">Other Packages</div>
                    </a>
                    <a href="{{ github }}/releases" target="_blank" rel="noopener noreferrer" class="flex items-center gap-3 px-4 py-2.5 hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors">
                        <div class="font-medium text-sm">Finch Releases</div>
                    </a>
                    <a href="https://pub.dev/packages/finch/changelog" target="_blank" rel="noopener noreferrer" class="flex items-center gap-3 px-4 py-2.5 hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors">
                        <div class="font-medium text-sm">Changelog</div>
                    </a>
                    <a href="https://github.com/sponsors/uproid" target="_blank" rel="noopener noreferrer" class="flex items-center gap-3 px-4 py-2.5 hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors">
                        <div class="font-medium text-sm">Support</div>
                    </a>
                </div>
            </div>

            <!-- Mobile Search -->
            <button id="mobileSearchToggle" class="md:hidden px-2 py-1 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700">
                <i class="fas fa-search text-lg"></i>
            </button>

            <!-- GitHub -->
            <a href="{{ github }}" target="_blank" class="px-2 py-1 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700">
                <i class="fab fa-github text-xl"></i>
            </a>

            <!-- Theme Toggle -->
            <button id="themeToggle" class="px-2 py-1 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700 cursor-pointer">
                <i id="theme-icon-light" class="fas fa-moon text-lg" style="display: inline-block;"></i>
                <i id="theme-icon-dark" class="fas fa-sun text-lg" style="display: none;"></i>
            </button>
        </div>
    </div>
</nav>

<!-- Mobile Search Modal -->
<div id="mobileSearchModal" class="hidden fixed inset-0 bg-black bg-opacity-50 z-50 md:hidden">
    <div class="bg-white dark:bg-gray-800 p-2 pb-0 pt-3">
        <div class="flex items-center gap-2 mb-4">
            <input 
                type="text" 
                id="mobileSearchInput"
                placeholder="Search documentation..." 
                class="flex-1 px-4 py-2 pl-10 rounded-lg border border-gray-300 dark:border-gray-600 bg-gray-50 dark:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-500 dark:focus:ring-blue-400"
                autocomplete="off"
            >
            <button id="closeMobileSearch" class="p-2 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700">
                <i class="fas fa-times text-lg"></i>
            </button>
        </div>
        <div id="mobileSearchResults" class="bg-white dark:bg-gray-800 rounded-lg max-h-96 overflow-y-auto">
            <!-- Mobile results will be inserted here -->
        </div>
    </div>
</div>
{% endblock %}